        function showStepDetail(stepNumber) {
            const content = stepContent[stepNumber];

            // Update detail panel content
            timelineDetail.innerHTML = `
                <h3 class="detail-title">${content.title}</h3>
                <p class="detail-description">${content.description}</p>
                <ul class="detail-features">
                    ${content.features.map(feature => `<li>${feature}</li>`).join('')}
                </ul>
                <div class="detail-highlight">${content.highlight}</div>
            `;

            // Update active state
            timelineSteps.forEach(step => step.classList.remove('active'));
            document.querySelector(`[data-step="${stepNumber}"]`).classList.add('active');
        }

        // Add click handlers to timeline steps
        timelineSteps.forEach(step => {
            step.addEventListener('click', () => {
                const stepNumber = parseInt(step.getAttribute('data-step'));
                showStepDetail(stepNumber);
            });
        });
    </script>
