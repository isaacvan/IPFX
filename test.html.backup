    <script>
        // Hamburger Menu Toggle
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');

        hamburger.addEventListener('click', () => {
            hamburger.classList.toggle('active');
            navLinks.classList.toggle('mobile-open');
        });

        // Close menu when clicking a link
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                hamburger.classList.remove('active');
                navLinks.classList.remove('mobile-open');
            });
        });

        // Close menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!hamburger.contains(e.target) && !navLinks.contains(e.target)) {
                hamburger.classList.remove('active');
                navLinks.classList.remove('mobile-open');
            }
        });

        // Enhanced Canvas Flow Lines with Mouse Interaction
        const canvas = document.getElementById('flowCanvas');
        const ctx = canvas.getContext('2d');
        let width, height;
        let particles = [];
        let mousePos = { x: width / 2, y: height / 2 };
        const particleCount = 100;

        function resize() {
            const dpr = Math.min(window.devicePixelRatio || 1, 2);
            width = canvas.offsetWidth;
            height = canvas.offsetHeight;
            canvas.width = width * dpr;
            canvas.height = height * dpr;
            ctx.scale(dpr, dpr);
            initParticles();
        }

        class Particle {
            constructor() {
                this.reset();
            }

            reset() {
                this.x = Math.random() * width;
                this.y = Math.random() * height;
                this.vx = (Math.random() - 0.5) * 0.5;
                this.vy = (Math.random() - 0.5) * 0.5;
                this.life = Math.random() * 100;
                this.maxLife = 100;
            }

            update() {
                // Move towards mouse slightly
                const dx = mousePos.x - this.x;
                const dy = mousePos.y - this.y;
                const distance = Math.sqrt(dx * dx + dy * dy);

                if (distance < 200) {
                    this.vx += dx * 0.00005;
                    this.vy += dy * 0.00005;
                }

                this.x += this.vx;
                this.y += this.vy;
                this.life--;

                // Boundaries
                if (this.x < 0 || this.x > width || this.y < 0 || this.y > height || this.life < 0) {
                    this.reset();
                }

                // Damping
                this.vx *= 0.99;
                this.vy *= 0.99;
            }

            draw() {
                const opacity = this.life / this.maxLife;
                ctx.fillStyle = `rgba(37, 99, 235, ${opacity * 0.6})`;
                ctx.beginPath();
                ctx.arc(this.x, this.y, 1.5, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        function initParticles() {
            particles = [];
            for (let i = 0; i < particleCount; i++) {
                particles.push(new Particle());
            }
        }

        function drawConnections() {
            for (let i = 0; i < particles.length; i++) {
                for (let j = i + 1; j < particles.length; j++) {
                    const dx = particles[i].x - particles[j].x;
                    const dy = particles[i].y - particles[j].y;
                    const distance = Math.sqrt(dx * dx + dy * dy);

                    if (distance < 120) {
                        const opacity = (1 - distance / 120) * 0.3;
                        ctx.strokeStyle = `rgba(37, 99, 235, ${opacity})`;
                        ctx.lineWidth = 0.5;
                        ctx.beginPath();
                        ctx.moveTo(particles[i].x, particles[i].y);
                        ctx.lineTo(particles[j].x, particles[j].y);
                        ctx.stroke();
                    }
                }
            }
        }

        function animate() {
            // Slightly more opaque fade to prevent ghosting while maintaining smooth trails
            ctx.fillStyle = 'rgba(10, 10, 12, 0.25)';
            ctx.fillRect(0, 0, width, height);

            particles.forEach(p => {
                p.update();
                p.draw();
            });

            drawConnections();

            requestAnimationFrame(animate);
        }

        // Mouse tracking for particle interaction
        canvas.addEventListener('mousemove', (e) => {
            const rect = canvas.getBoundingClientRect();
            mousePos.x = e.clientX - rect.left;
            mousePos.y = e.clientY - rect.top;
        });

        // Initialize
        window.addEventListener('resize', resize);
        resize();
        animate();

        // Smooth Scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Optimized parallax effect on scroll and sticky nav
        const nav = document.querySelector('nav');
        const heroContent = document.querySelector('.hero-content');
        const heroSection = document.querySelector('.hero');
        let ticking = false;

        function updateScroll() {
            const scrolled = window.pageYOffset;

            // Parallax effect
            if (heroContent) {
                heroContent.style.transform = `translateY(${scrolled * 0.3}px)`;
                heroContent.style.opacity = 1 - (scrolled / 700);
            }

            // Sticky nav after hero section
            if (heroSection && nav) {
                const heroHeight = heroSection.offsetHeight;
                if (scrolled > heroHeight - nav.offsetHeight) {
                    nav.classList.add('scrolled');
                } else {
                    nav.classList.remove('scrolled');
                }
            }

            ticking = false;
        }

        window.addEventListener('scroll', () => {
            if (!ticking) {
                window.requestAnimationFrame(updateScroll);
                ticking = true;
            }
        }, { passive: true });

        // Count-up animation for stats
        function animateValue(element, start, end, duration, prefix = '', suffix = '') {
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);

                // Easing function for smooth animation
                const easeOutQuad = progress * (2 - progress);
                const currentValue = Math.floor(easeOutQuad * (end - start) + start);

                element.textContent = prefix + currentValue + suffix;

                if (progress < 1) {
                    window.requestAnimationFrame(step);
                } else {
                    element.textContent = prefix + end + suffix;
                }
            };
            window.requestAnimationFrame(step);
        }

        // Intersection Observer for stats
        const statsObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting && !entry.target.classList.contains('counted')) {
                    entry.target.classList.add('counted');

                    const statValues = entry.target.querySelectorAll('.stat-value');
                    statValues.forEach(stat => {
                        const target = parseInt(stat.dataset.target);
                        const prefix = stat.dataset.prefix || '';
                        const suffix = stat.dataset.suffix || '';

                        animateValue(stat, 0, target, 2200, prefix, suffix);
                    });
                }
            });
        }, {
            threshold: 0.2
        });

        // Observe the stats section
        const heroStats = document.querySelector('.hero-stats');
        if (heroStats) {
            statsObserver.observe(heroStats);
        }

        // Path Section Animations
        const pathObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, {
            threshold: 0.3
        });

        // Observe path divider and content
        const pathDivider = document.querySelector('.path-divider');
        const pathContents = document.querySelectorAll('.path-content');

        if (pathDivider) {
            pathObserver.observe(pathDivider);
        }

        pathContents.forEach(content => {
            pathObserver.observe(content);
        });

        // Infinite Carousel for Platform Logos
        const carouselTrack = document.getElementById('carouselTrack');

        if (carouselTrack) {
            const originalLogos = Array.from(carouselTrack.children);

            // Clone logos enough times to fill viewport + buffer
            const cloneCount = Math.max(3, Math.ceil((window.innerWidth * 3) / (originalLogos.length * 150)));

            for (let i = 0; i < cloneCount; i++) {
                originalLogos.forEach(logo => {
                    const clone = logo.cloneNode(true);
                    carouselTrack.appendChild(clone);
                });
            }

            // Wait for images to load before calculating width
            let animationId;
            let isPaused = false;

            const initCarousel = () => {
                // Calculate the exact width of one complete set
                const trackGap = parseFloat(getComputedStyle(carouselTrack).gap) || 0;
                let singleSetWidth = 0;

                for (let i = 0; i < originalLogos.length; i++) {
                    const logo = carouselTrack.children[i];
                    singleSetWidth += logo.offsetWidth + trackGap;
                }

                let position = 0;
                const speed = 0.5; // pixels per frame

                function animate() {
                    if (!isPaused) {
                        position += speed;

                        // Seamlessly reset when exactly one set has scrolled past
                        if (position >= singleSetWidth) {
                            position = position % singleSetWidth;
                        }

                        carouselTrack.style.transform = `translateX(-${position}px)`;
                    }

                    animationId = requestAnimationFrame(animate);
                }

                // Pause on hover
                carouselTrack.addEventListener('mouseenter', () => {
                    isPaused = true;
                });

                carouselTrack.addEventListener('mouseleave', () => {
                    isPaused = false;
                });

                // Start animation
                animate();
            };

            // Wait for images to load
            Promise.all(
                Array.from(carouselTrack.querySelectorAll('img')).map(img => {
                    if (img.complete) return Promise.resolve();
                    return new Promise(resolve => {
                        img.onload = resolve;
                        img.onerror = resolve;
                    });
                })
            ).then(initCarousel);

            // Recalculate on resize
            let resizeTimeout;
            window.addEventListener('resize', () => {
                clearTimeout(resizeTimeout);
                resizeTimeout = setTimeout(() => {
                    if (animationId) cancelAnimationFrame(animationId);
                    location.reload(); // Simplest way to reinit on resize
                }, 500);
            });
        }

        // ==================== PROFIT CALCULATOR ====================
        const profitSlider = document.getElementById('profitSlider');
        const profitPercentDisplay = document.getElementById('profitPercentDisplay');
        const annualProfitDisplay = document.getElementById('annualProfit');
        const milestonesList = document.getElementById('milestonesList');

        // Capital progression levels for Infinity Challenge
        const capitalLevels = [1000, 5000, 10000, 50000, 100000, 200000];

        function calculateProfits(monthlyProfitPercent) {
            const months = 12;
            const profitSplit = 0.90; // 90% profit split
            const scaleThreshold = 10; // Scale up at 10% cumulative gain

            let currentCapital = capitalLevels[0];
            let currentLevelIndex = 0;
            let totalProfitMade = 0;
            let cumulativePercentGain = 0;

            const milestones = [];

            // Record starting position
            milestones.push({
                month: 0,
                capital: currentCapital,
                profit: 0
            });

            for (let month = 1; month <= months; month++) {
                // Calculate profit for this month
                const monthProfit = currentCapital * (monthlyProfitPercent / 100);
                totalProfitMade += monthProfit;
                cumulativePercentGain += monthlyProfitPercent;

                // Check if we should scale up capital (can scale multiple times in one month if high %)
                while (cumulativePercentGain >= scaleThreshold && currentLevelIndex < capitalLevels.length - 1) {
                    // Move to next capital level
                    currentLevelIndex++;
                    currentCapital = capitalLevels[currentLevelIndex];
                    cumulativePercentGain -= scaleThreshold; // Subtract threshold, carry over excess

                    // Record this milestone
                    milestones.push({
                        month: month,
                        capital: currentCapital,
                        profit: totalProfitMade
                    });
                }
            }

            // Add final milestone if not already added
            if (milestones[milestones.length - 1].month !== months) {
                milestones.push({
                    month: months,
                    capital: currentCapital,
                    profit: totalProfitMade
                });
            }

            // Calculate your take (90% split)
            const yourProfit = totalProfitMade * profitSplit;

            return {
                totalProfit: yourProfit,
                finalCapital: currentCapital,
                milestones: milestones
            };
        }

        function formatCurrency(value) {
            if (value >= 1000000) {
                return '$' + (value / 1000000).toFixed(2) + 'M';
            } else if (value >= 1000) {
                return '$' + (value / 1000).toFixed(1) + 'K';
            } else {
                return '$' + value.toFixed(0);
            }
        }

        function updateCalculator() {
            const profitPercent = parseFloat(profitSlider.value);
            profitPercentDisplay.textContent = profitPercent + '%';

            const results = calculateProfits(profitPercent);

            // Update annual profit display
            annualProfitDisplay.textContent = formatCurrency(results.totalProfit);

            // Update milestones list
            milestonesList.innerHTML = '';

            // Show key milestones (filter to show only significant capital changes)
            const significantMilestones = results.milestones.filter((milestone, index) => {
                if (index === 0) return true; // Always show start
                if (index === results.milestones.length - 1) return true; // Always show end
                return milestone.capital !== results.milestones[index - 1].capital; // Show when capital changes
            });

            significantMilestones.forEach((milestone, index) => {
                const milestoneItem = document.createElement('div');
                milestoneItem.className = 'milestone-item';

                const monthLabel = document.createElement('span');
                monthLabel.className = 'milestone-month';
                monthLabel.textContent = index === 0 ? 'Start' : `Month ${milestone.month}`;

                const capitalLabel = document.createElement('span');
                capitalLabel.className = 'milestone-capital';
                capitalLabel.textContent = formatCurrency(milestone.capital);

                milestoneItem.appendChild(monthLabel);
                milestoneItem.appendChild(capitalLabel);
                milestonesList.appendChild(milestoneItem);
            });
        }

        // Initialize calculator
        updateCalculator();

        // Update on slider change
        profitSlider.addEventListener('input', updateCalculator);

        // ==================== TIMELINE INTERACTIVE ====================
        const timelineSteps = document.querySelectorAll('.timeline-step');
        const timelineDetail = document.getElementById('timelineDetail');

